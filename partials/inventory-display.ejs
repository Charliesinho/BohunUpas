<div id="inventoryArray">
    <% character.inventory.forEach((item) => { %>
    <div class="invItem">
        <div><img class="invItemImage" src="../../<%=item.image%>"></div> 
        <div><%=item.name%></div>   
        
        <div class="invStats">
            
        </div>

        <% if (rendering === "characterProfile") { %>
        <div class="invButtons">
            <form action="/equipment/equipItem/<%=character._id%>/<%=item.type%>/<%=item._id%>" method="POST">
                <button class="buttonItem" type="submit">ðŸ“¥ +<%=item.modifier%></button>
            </form>               
        </div>     
        <% } else if (rendering === "marketplace") { %>
        <div class="invButtons">
            <form action="/marketplace/create-offer/<%=item._id%>" method="GET">
                <button class="buttonItem" type="submit">Select</button>
            </form>    
        </div>      
        <% } else if (rendering === "soulkeeper") { %>
            <div class="invButtons">
                <form action="/equipment/sellItem/<%=character._id%>/<%=item.type%>/<%=item._id%>" method="POST">
                    <button class="buttonItem" type="submit">ðŸ‘» <%=item.value%></button>
                </form>    
            </div>      
        <% } else if (rendering === "newmessage") { %>
        <div class="invButtons">
            <form action="/friends/newMessage/<%=friend._id%>/att/" method="POST">
                <button class="buttonItem" type="submit" name="attachItemBtn" value="<%=item._id%>">Attach</button>
            </form>    
        </div>      
        <% } %>
    </div>
    <% }) %>